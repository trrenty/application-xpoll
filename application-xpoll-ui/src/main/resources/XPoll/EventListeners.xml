    <property>
      <code>{{groovy}}
def docSource = xcontext.method.input.get(1);
def xwikiContext = xcontext.method.input.get(2);
def pollObject = docSource.getObject('XPoll.XPollClass');
if (pollObject != null) {
  def voteResults = services.xpoll.getVoteResults(docSource.getDocumentReference());
  def maxVotes = 0;
  def currentWinners = [];
  for (proposal in voteResults.entrySet()) {
    if (proposal.getValue() == maxVotes) {
      currentWinners.add(proposal.getKey());
    } else if (proposal.getValue() > maxVotes) {
      currentWinners.clear();
      currentWinners.add(proposal.getKey());
      maxVotes = proposal.getValue();
    }
  }
  pollObject.set('winner', currentWinners.join(','), xwikiContext);
}
{{/groovy}}</code>
